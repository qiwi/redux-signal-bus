{
  "name": "redux-signal-bus",
  "version": "0.0.1",
  "description": "Signal bus over redux actions",
  "main": "scr/index",
  "directories": {
    "source": "src",
    "test": "test"
  },
  "@std/esm": {
    "mode": "all",
    "cjs": true
  },
  "scripts": {
    "flow": "flow",
    "flow_coverage": "flow-coverage-report -i 'src/**/*.js' -t html -t json -t text --threshold 90",
    "lint": "standard-flow src/**/*.js test/**/*.js",
    "mocha": "nyc mocha --opts .mocha.opts && nyc report --reporter=text-lcov > ./coverage/lcov.info",
    "test": "npm run flow_coverage && npm run lint && npm run mocha",
    "build": "babel src --out-dir dist",
    "coveralls": "npm test && nyc report --reporter=text-lcov | coveralls",
    "example": "REACT_APP_ENTRY=./example/index.js react-scripts start",
    "doc": "esdoc",
    "test_with_report": "npm test && npm run codeclimate_push && npm run coveralls_push",
    "codeclimate_push": "codeclimate-test-reporter < ./coverage/lcov.info",
    "coveralls_push": "cat ./coverage/lcov.info | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git@github.qiwi.com:jslab/redux-signal-bus.git"
  },
  "keywords": [
    "redux",
    "signal",
    "bus",
    "event"
  ],
  "author": "Anton Golub <a.golub@qiwi.com>",
  "license": "MIT",
  "dependencies": {
    "lodash-es": "^4.17.5",
    "react": "^16.2.0",
    "react-redux": "^5.0.7",
    "redux": "^4.0.0"
  },
  "devDependencies": {
    "@std/esm": "^0.26.0",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2016": "^6.24.1",
    "babel-preset-es2017": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-minify": "^0.4.3",
    "chai": "^4.1.2",
    "chai-spies": "^1.0.0",
    "chai-subset": "^1.6.0",
    "coveralls": "^3.0.0",
    "esdoc": "^1.0.4",
    "esdoc-flow-plugin": "^1.0.0",
    "esdoc-standard-plugin": "^1.0.0",
    "eslint": "^5.0.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-config-standard-flow": "^1.0.1",
    "flow-bin": "^0.75.0",
    "flow-coverage-report": "^0.5.0",
    "flow-remove-types": "^1.2.3",
    "glob": "^7.1.2",
    "mocha": "^5.0.3",
    "nyc": "^12.0.2",
    "react-dom": "^16.2.0",
    "react-scripts": "^1.1.1",
    "reduce-reducers": "^0.3.0",
    "standard-flow": "^1.0.0"
  },
  "standard-flow": {
    "parser": "babel-eslint",
    "globals": [
      "it",
      "expect",
      "describe",
      "beforeEach"
    ],
    "ignore": [],
    "plugins": [
      "flowtype"
    ],
    "settings": {
      "flowtype": {
        "onlyFilesWithFlowAnnotation": true
      }
    }
  }
}
