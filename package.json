{
  "name": "@qiwi/redux-signal-bus",
  "version": "1.0.2",
  "description": "Signal bus over redux actions",
  "private": false,
  "main": "dist/es5/index.js",
  "directories": {
    "source": "src",
    "test": "test"
  },
  "files": [
    "README.md",
    "CHANGELOG.md",
    "dist/"
  ],
  "scripts": {
    "flow": "flow",
    "flow_coverage": "flow-coverage-report -i 'src/main/*.js' -t html -t json -t text --threshold 85",
    "fetch_libdefs": "flow-typed install lodash-es@4.17.11",
    "lint": "standard src/**/*.js test/**/*.js",
    "jest": "jest --config=jest.config.json",
    "test": "yarn lint && yarn flow_coverage && yarn jest",
    "docs_gen": "yarn build_es6 && docma --require flow-remove-types/register -c ./docma.json",
    "docs_view": "docma serve",
    "docs": "yarn docs_gen && yarn docs_view",
    "test_with_report": "npm test && yarn coveralls_push",
    "coveralls_push": "cat ./coverage/lcov.info | coveralls",
    "build_es6": "flow-remove-types src/main --out-dir dist/es6/",
    "build_es5": "BABEL_ENV=production babel src/main --out-dir dist/es5/",
    "build": "rm -rf dist && yarn build_es5 && yarn build_es6",
    "example": "REACT_APP_ENTRY=./example/index.js react-scripts start"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/qiwi/redux-signal-bus.git"
  },
  "keywords": [
    "redux",
    "signal",
    "bus",
    "event",
    "redux-signal-bus",
    "@qiwi/redux-signal-bus"
  ],
  "author": "Anton Golub <a.golub@qiwi.com>",
  "license": "MIT",
  "dependencies": {
    "lodash": "^4.17.11",
    "react-redux": "^7.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.3",
    "@babel/plugin-transform-modules-commonjs": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.4.0",
    "@semantic-release/changelog": "^3.0.2",
    "@semantic-release/git": "^7.0.8",
    "@semantic-release/github": "^5.2.10",
    "@semantic-release/npm": "^5.1.4",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^24.7.1",
    "babel-preset-minify": "^0.5.0",
    "chai": "^4.2.0",
    "chai-spies": "^1.0.0",
    "chai-subset": "^1.6.0",
    "coveralls": "^3.0.3",
    "docma": "^3.2.2",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.12.1",
    "eslint": "^5.16.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-config-standard-flow": "^1.0.1",
    "flow-bin": "^0.97.0",
    "flow-coverage-report": "^0.6.1",
    "flow-remove-types": "^1.2.3",
    "flow-typed": "^2.5.1",
    "jest": "^24.7.1",
    "jest-enzyme": "^7.0.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "^2.1.8",
    "reduce-reducers": "^1.0.1",
    "redux": "^4.0.1",
    "semantic-release": "^15.13.4",
    "standard": "^12.0.1"
  },
  "peerDependencies": {
    "package-c": "^0.5.0"
  },
  "standard": {
    "parser": "babel-eslint",
    "plugins": [
      "flowtype"
    ],
    "globals": [
      "jest",
      "it",
      "expect",
      "describe",
      "before",
      "beforeAll",
      "beforeEach",
      "afterAll",
      "after",
      "afterEach",
      "xdescribe",
      "xit"
    ],
    "rules": {
      "use-flow-type": 1
    },
    "ignore": [],
    "settings": {
      "flowtype": {
        "onlyFilesWithFlowAnnotation": true
      }
    }
  },
  "release": {
    "branch": "master",
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "prepare": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "publish": [
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
