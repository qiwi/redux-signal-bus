{
  "name": "redux-signal-bus",
  "version": "0.0.1",
  "description": "Signal bus over redux actions",
  "main": "scr/index",
  "directories": {
    "source": "src",
    "test": "test"
  },
  "@std/esm": {
    "esm": "all",
    "cjs": true
  },
  "scripts": {
    "flow": "flow",
    "flow_coverage": "flow-coverage-report -i 'src/**/*.js' -t html -t json -t text --threshold 90",
    "lint": "standard-flow src/**/*.js test/**/*.js",
    "mocha": "nyc mocha --opts .mocha.opts",
    "test": "npm run flow_coverage && npm run lint && npm run mocha",
    "build": "babel src --out-dir dist",
    "coveralls": "npm test && nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git@github.qiwi.com:jslab/redux-signal-bus.git"
  },
  "keywords": [
    "redux",
    "signal",
    "bus",
    "event"
  ],
  "author": "Anton Golub <a.golub@qiwi.com>",
  "license": "MIT",
  "dependencies": {
    "lodash-es": "^4.17.5"
  },
  "devDependencies": {
    "@std/esm": "^0.21.7",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2016": "^6.24.1",
    "babel-preset-es2017": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-minify": "^0.3.0",
    "chai": "^4.1.2",
    "chai-spies": "^1.0.0",
    "chai-subset": "^1.6.0",
    "coveralls": "^3.0.0",
    "eslint": "^4.17.0",
    "eslint-config-standard": "^11.0.0-beta.0",
    "eslint-config-standard-flow": "^1.0.1",
    "flow-bin": "^0.65.0",
    "flow-coverage-report": "^0.4.1",
    "flow-remove-types": "^1.2.3",
    "glob": "^7.1.2",
    "mocha": "^5.0.1",
    "nyc": "^11.4.1",
    "standard-flow": "^1.0.0"
  }
}
